<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Updating campground</h1>
    <div class="col-6 offset-3">
        <form  action="/campgrounds/<%= campground.id %>?_method=PUT" method="post" novalidate class="form-validate" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">title:</label>
                <input class="form-control" type="text" name="campground[title]" value = "<%= campground.title %>" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">location:</label>
                <input class="form-control" type="text" name="campground[location]" value = "<%= campground.location %>" id="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image"> Add images:</label>
                <input class="form-control" type="file" name="images" multiple>
            </div>

            <div class="mb-3">
                <% campground.images.forEach(function (img,i) { %>
                    <img src="<%= img.thumbnail %>" alt="" srcset="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox"  id="<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="<%= i %>">Delete?</label>

                <% }) %>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description"> description:</label>
                <textarea class="form-control" name="campground[description]" id="description" required><%= campground.description %></textarea>
            </div>
            <label class="form-label" for="price"> price:</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">$</span>
                <input type="text" class="form-control" name="campground[price]" placeholder="0.00" aria-label="0.00" aria-describedby="basic-addon1" value = "<%= campground.price %>" required>
              </div>
              

            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Submit">
            </div>
            
        </form>
        <div class="mb-3"><a href="/campgrounds">Back to all campgrounds</a></div>
    </div>
</div>

    
<script src="/js/validateForms.js"></script>